
server {
	listen    {{ .Env.        entrypoint: dockerize -template ./.docker/app/.env:.env -template ./.docker/app/nginx.conf:./docker/nginx/nginx.conf -wait tcp://db:3306 -timeout 40s ./.docker/entrypoint.sh
        environment:
            - DB_HOST=db
            - DB_DATABASE=laravel
            - DB_USERNAME=root
            - DB_PASSWORD=root
            - NGINX_HOST_PORTA
 }};
	index     index.php index.html;
	root      /var/www/public;

	location ~ \.php$ {
		try_files $uri = 404;
		fastcgi_split_path_info ^(.+\.php)(/.+);
		fastcgi_pass            app:9000;
		fastcgi_index           index.php;
		include                 fastcgi_params;
		fastcgi_param           SCRIPT_FILENAME $document_root$fastcgi_script_name;
		fastcgi_param           PATH_INFO $fastcgi_path_info;
	}

	location / {
		try_files $uri $uri/ /index.php?$query_string;
		gzip_static on;
	}
}
